<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03a9f4"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sleep_text"
            android:layout_width="315dp"
            android:layout_height="123dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#3f51b5"
            android:drawableEnd="@drawable/sleep1"
            android:drawableRight="@drawable/sleep1"
            android:paddingLeft="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:text="@string/Sleep"
            android:textColor="#e1f5fe" />

        <TextView
            android:layout_width="315dp"
            android:layout_height="123dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/sleep_text"
            android:layout_toRightOf="@+id/sleep_text"
            android:background="#9c27b0"
            android:drawableEnd="@drawable/food"
            android:drawableRight="@drawable/food"
            android:paddingLeft="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:text="@string/Nutrition"
            android:textColor="#e1f5fe" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exercise_text"
            android:layout_width="315dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:background="#009688"
            android:drawableEnd="@drawable/bodybuilding"
            android:drawableRight="@drawable/bodybuilding"
            android:paddingLeft="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:text="@string/Exercise"
            android:textColor="#e1f5fe"
            tools:ignore="PrivateResource" />

        <TextView
            android:layout_width="312dp"
            android:layout_height="131dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/exercise_text"
            android:layout_toRightOf="@+id/exercise_text"
            android:background="#673ab7"
            android:drawableEnd="@drawable/office"
            android:drawableRight="@drawable/office"
            android:paddingLeft="6dp"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:text="@string/Diary"
            android:textColor="#e1f5fe" />
    </RelativeLayout>

    <Button
        android:id="@+id/back_to_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/recovery_back_to_profile" />


</LinearLayout>