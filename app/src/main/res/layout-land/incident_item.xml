<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/browser_actions_bg_grey"
            android:orientation="vertical"
            android:padding="8dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="600dp"
                    android:layout_marginLeft="600dp"
                    android:layout_marginTop="4dp"
                    android:contentDescription="@string/reportlogo"
                    android:src="@drawable/report" />

                <TextView
                    android:id="@+id/incident_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/incident_list_player_name"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/player_view_coachname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/incidentList_CoachName"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/player_view_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="62dp"
                    android:text="@string/incidentList_Date"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="16sp" />




            <TextView
                android:id="@+id/red_flag_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                android:text="@string/incidentList_RedFlag"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/obs_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="122dp"
                android:text="@string/incidentListOBS"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/symptoms_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="152dp"
                    android:text="@string/incidentListSymptoms"
                    android:textColor="@color/browser_actions_text_color"
                    android:textSize="16sp" />

            <TextView
                android:id="@+id/memory_test_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="182dp"
                android:text="@string/incidentListMemory"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/incident_report_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="212dp"
                android:text="@string/incidentList_incident_report"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>
