<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp"
        android:background="@color/browser_actions_bg_grey"
        android:layout_marginBottom="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/browser_actions_bg_grey">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="590dp"
                android:layout_marginLeft="590dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/searchUserLogo"
                android:src="@drawable/find_user" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="match_parent"
            android:background="@color/browser_actions_bg_grey"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/player_search_name"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/playerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_search_email"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/playerPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/player_search_phone"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player_EmergencyC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/player_search_EC"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player_Contact_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/player_search_EC_phone"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>