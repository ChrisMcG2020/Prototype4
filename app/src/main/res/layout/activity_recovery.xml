<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground">
<LinearLayouts xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:padding="8dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/sleep_text"
        android:layout_width="315dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#3f51b5"
        android:drawableEnd="@drawable/sleep1"
        android:drawableRight="@drawable/sleep1"
        android:paddingLeft="6dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:text="@string/Sleep"
        android:textColor="#e1f5fe" />

    <TextView
        android:layout_width="315dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="#9c27b0"
        android:drawableEnd="@drawable/food"
        android:drawableRight="@drawable/food"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:text="@string/Nutrition"
        android:textColor="#e1f5fe"
        android:paddingEnd="6dp" />

    <TextView
        android:id="@+id/exercise_text"
        android:layout_width="315dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="#009688"
        android:drawableEnd="@drawable/bodybuilding"
        android:drawableRight="@drawable/bodybuilding"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:text="@string/Exercise"
        android:textColor="#e1f5fe"
        tools:ignore="PrivateResource"
        android:paddingEnd="6dp" />

    <TextView
        android:layout_width="315dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:background="#673ab7"
        android:drawableEnd="@drawable/office"
        android:drawableRight="@drawable/office"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:text="@string/Diary"
        android:textColor="#e1f5fe"
        android:paddingEnd="6dp" />

    <Button
        android:id="@+id/back_to_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/recovery_back_to_profile" />


</LinearLayouts>
</ScrollView>