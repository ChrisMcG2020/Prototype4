<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--CardView containing all the information fields-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:layout_marginBottom="6dp"
        android:background="@color/browser_actions_bg_grey"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/browser_actions_bg_grey">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="280dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="-4dp"
                android:contentDescription="@string/reportlogo"
                android:src="@drawable/report" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="match_parent"
            android:background="@color/browser_actions_bg_grey"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/incident_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/incident_list_player_name"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player_view_coachname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/incidentList_CoachName"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incidentList_Date"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/red_flag_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/incidentList_RedFlag"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/obs_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/incidentListOBS"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/memory_test_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/incidentListMemory"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/symptoms_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/incidentListSymptoms"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/incident_report_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/incidentList_incident_report"
                android:textColor="@color/browser_actions_text_color"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>